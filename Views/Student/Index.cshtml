@model IEnumerable<WebAppMVP.Models.Student>;
@{
	ViewData["Title"] = "Home";
}

@if(Model.Count()>0)
{
	<h1 class="text-center">Computer Student Score</h1>
	<table class="table table-dark">
		<thead>
			<tr>
				<th>Student ID</th>
				<th>Student Name</th>
				<th>Student Score</th>
				<th>Edit</th>
				<th>Delete</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var student in Model)
			{
				<tr>
					<td>@student.Id</td>
					<td>@student.Name</td>
					<td>@student.Score</td>
					<td><a class="btn btn-warning" asp-controller="Student" asp-action="Edit" asp-route-id="@student.Id">Edit</a></td>
					<td>
						<a class="btn btn-danger" asp-controller="Student" asp-action="Delete" asp-route-id="@student.Id"
						   onclick="return confirm('Do you want delete @student.Name ?')">Delete</a>
					</td>
				</tr>
			}
		</tbody>
	</table>


}
else
{
	<div class="alert alert-secondary ">No student data in stytem</div>
	
}





